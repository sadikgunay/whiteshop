<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#402196F3">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:angle="45"
                android:startColor="#FF2196F3"
                android:endColor="#FF1976D2"
                android:type="linear"/>
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="14dp"
                android:bottom="14dp"/>
            <stroke
                android:width="0.7dp"
                android:color="#25FFFFFF"/>
        </shape>
    </item>
</ripple>